{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "deno.window"],
    "strict": true,
    "include": [
      "www/**/*",
      "./bin/**/*"
    ]
  },
  "importMap": "import_map.json",
  "fmt": {
    "files": {
      "exclude": ["node_modules", "public", "www/js"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "exclude": ["node_modules", "public", "www/js"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "bin:esbuild": "deno run --allow-all .bin/deno/esbuild.ts www/js",
    "bin:sass": "deno run --allow-read --allow-write --allow-env='SASS_PATH' .bin/deno/sass.ts www/css",
    "bin:serve": "deno run --allow-net --allow-run --allow-read .bin/deno/serve.ts",
    "build": "deno task bin:sass && deno task bin:esbuild",
    "start": "deno task build && deno task start:hmr",
    "start:hmr": "deno task start:hmr:html & deno task start:hmr:css & deno task start:hmr:js",
    "start:hmr:html": "deno task bin:serve",
    "start:hmr:css": "deno task bin:sass --watch",
    "start:hmr:js": "deno task bin:esbuild --watch"
  }
}
