{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "deno.window"],
    "strict": true,
    "include": [
      "www/**/*",
      "./bin/**/*"
    ]
  },
  "importMap": "import_map.json",
  "fmt": {
    "files": {
      "exclude": ["node_modules", "public", "public-node", "www/js"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true
    }
  },
  "lint": {
    "files": {
      "exclude": ["node_modules", "public", "public-node", "www/js"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "tasks": {
    "bin:esbuild": "deno run --allow-all .bin/esbuild.ts www/js",
    "bin:rollup": "deno run --allow-all .bin/rollup.ts",
    "bin:sass": "deno run --allow-read --allow-write --allow-env='SASS_PATH' .bin/sass.ts www/css",
    "bin:serve": "deno run --allow-net --allow-run --allow-read .bin/serve.ts www",
    "build": "deno task setup && deno task bin:rollup",
    "setup": "deno task bin:sass && deno task bin:esbuild",
    "start": "deno task setup && deno task start:hmr",
    "start:hmr": "deno task start:hmr:html & deno task start:hmr:css & deno task start:hmr:js",
    "start:hmr:html": "deno task bin:serve",
    "start:hmr:css": "deno task bin:sass --watch",
    "start:hmr:js": "deno task bin:esbuild --watch",
    "preview": "deno run --allow-net --allow-run --allow-read .bin/serve.ts public"
  }
}
