{
  "name": "@harleys-website/www",
  "version": "0.1.0",
  "license": "MIT",
  "author": "Harley Lang",
  "description": "it's me website",
  "main": "index.js",
  "private": true,
  "type": "module",
  "repository": "git+https://github.com/harleylang/harleys-website.git",
  "bugs": {
    "url": "https://github.com/harleylang/harleys-website/issues"
  },
  "homepage": "https://github.com/harleylang/harleys-website#readme",
  "scripts": {
    "clean": "yarn clean:dist && yarn clean:node_modules",
    "clean:dist": "find . -name 'dist' -type d -prune -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "prettier-write": "npx prettier --write .",
    "dev": "esr .bin/dev.mjs",
    "qa": "yarn qa:tsc && yarn qa:eslint",
    "qa:tsc": "tsc",
    "qa:eslint": "npx eslint --max-warnings=0 .",
    "reset": "yarn clean && yarn setup",
    "setup": "yarn && yarn sass && yarn turbo run build",
    "sass": "sass --no-source-map www/css",
    "start": "yarn start:server & yarn start:scss & yarn start:ssg",
    "start:server": "wds --config ./wds.config.mjs --app-index www/html/index.html",
    "start:scss": "sass --no-source-map -w www/css",
    "start:ssg": "yarn start:ssg:blog",
    "start:ssg:blog": "esr .bin/watch.mjs --dir www/html/blog/ --ignore index.html --cmd 'yarn build:ssg:blog'",
    "build": "rm -rf public && yarn build:ssg:blog && yarn sass && rollup -c ./rollup.config.mjs",
    "build:ssg:blog": "esr .bin/ssg.mjs --template www/html/blog/template.html && prettier --write www/html/blog/**/index.html",
    "preview": "wds --config ./wds.config.mjs --app-index public/index.html --root-dir public"
  },
  "dependencies": {
    "@harleys-website/me-carousel": "link:../www/js/components/me-carousel",
    "@harleys-website/me-darkmode-toggle": "link:../www/js/components/me-darkmode-toggle",
    "@harleys-website/hyperlink-precache": "link:../www/js/modules/hyperlink-precache",
    "@harleys-website/show-html-comments": "link:../www/js/components/show-html-comments",
    "@web/rollup-plugin-html": "^1.11.0",
    "rollup": "^2.79.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@web/dev-server": "^0.1.29",
    "@web/dev-server-esbuild": "^0.2.16",
    "chalk": "^5.0.1",
    "esbuild-runner": "^2.2.1",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.1.0",
    "inquirer": "^9.0.0",
    "prettier": "^2.5.1",
    "sass": "^1.53.0",
    "turbo": "^1.1.2",
    "typescript": "^4.5.4",
    "yarn": "^1.22.17"
  },
  "workspaces": [
    "www/js/components/*",
    "www/js/modules/*"
  ],
  "packageManager": "yarn@1.22.17"
}
